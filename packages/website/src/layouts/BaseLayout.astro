---
import '../styles/global.scss';

import { RegisterServiceWorker } from '../components/RegsiterServiceWorker';
import { Toaster } from '../components/SolidToast/index';

import HeadMetadata from '../components/HeadMetadata.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Anchor from '../components/Anchor';

const content = Astro?.props?.content ?? Astro?.props;
---

<!DOCTYPE html>
<html class="dark" lang={content.lang || 'en' }>

<head>
  <HeadMetadata title={content.title} description={content.description} />
</head>

<body>
  <Navbar />
  <Anchor id="skip-main" href="#content">Skip to main content</Anchor>

  <main id="main" data-wrapper>
    <slot />
  </main>

  <Footer />

  <Toaster 
    client:only="solid" 
    position="bottom-right"
    toastOptions={{
      // Define default options that each toast will inherit. Will be overwritten by individual toast options
      className: 'toast',
      duration: Infinity
    }}
  />
  <!-- <RegisterServiceWorker client:only="solid" /> -->
</body>

</html>