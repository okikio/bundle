{
  "name": "@bundle/utils",
  "version": "0.0.0",
  "access": "public",
  "type": "module",
  "description": "Essential TypeScript utilities for `@bundle/core`, streamlining web development workflows.",
  "typedocMain": "src/index.ts",
  "legacy": "lib/index.cjs",
  "main": "lib/index.cjs",
  "browser": "lib/index.js",
  "module": "lib/index.js",
  "exports": {
    ".": {
      "require": {
        "types": "./lib/index.d.cts",
        "default": "./lib/index.cjs"
      },
      "import": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      }
    },
    "./utils/*": "./src/utils/*",
    "./lib/*": "./lib/*",
    "./src/*": "./src/*",
    "./deno/*": "./src/deno/*",
    "./package.json": "./package.json"
  },
  "directories": {
    "lib": "./lib",
    "src": "./src"
  },
  "files": [
    "lib",
    "src"
  ],
  "publishConfig": {
    "provenance": true
  },
  "scripts": {
    "build": "tsup",
    "test:run": "vitest run && pnpm repl; pnpm deno",
    "test": "vitest",
    "repl": "tsx repl.ts",
    "deno": "deno run --allow-net --allow-env --allow-read --allow-write --allow-run ./repl.ts",
    "pre-release": "pnpm build; pnpm test:run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/okikio/bundlejs.git",
    "directory": "packages/utils"
  },
  "keywords": [
    "bundlejs",
    "utility",
    "deno",
    "typescript"
  ],
  "author": {
    "name": "Okiki Ojo",
    "email": "hey@okikio.dev",
    "url": "https://okikio.dev"
  },
  "bugs": {
    "url": "https://github.com/okikio/bundlejs/issues"
  },
  "homepage": "https://bundlejs.com",
  "dependencies": {
    "@opentf/obj-diff": "npm:@jsr/opentf__obj-diff@^0.11.0",
    "@std/assert": "npm:@jsr/std__assert@^0.225.2",
    "@std/async": "npm:@jsr/std__async@^0.224.0",
    "@std/collections": "npm:@jsr/std__collections@^0.224.2",
    "@std/encoding": "npm:@jsr/std__encoding@^0.224.1",
    "@std/fmt": "npm:@jsr/std__fmt@^0.225.1",
    "@std/html": "npm:@jsr/std__html@^0.224.0",
    "@std/path": "npm:@jsr/std__path@^0.225.1",
    "@std/semver": "npm:@jsr/std__semver@^0.224.0",
    "@std/url": "npm:@jsr/std__url@^0.224.0",
    "json5": "^2.2.3",
    "resolve.exports": "^2.0.2"
  },
  "peerDependencies": {
    "@opentf/obj-diff": "npm:@jsr/opentf__obj-diff@^0",
    "@std/assert": "npm:@jsr/std__assert@^0",
    "@std/async": "npm:@jsr/std__async@^0",
    "@std/collections": "npm:@jsr/std__collections@^0",
    "@std/encoding": "npm:@jsr/std__encoding@^0",
    "@std/fmt": "npm:@jsr/std__fmt@^0",
    "@std/html": "npm:@jsr/std__html@^0",
    "@std/path": "npm:@jsr/std__path@^0",
    "@std/semver": "npm:@jsr/std__semver@^0",
    "@std/url": "npm:@jsr/std__url@^0",
    "json5": "^2",
    "resolve.exports": "^2"
  },
  "devDependencies": {
    "@types/web": "^0.0.128",
    "pnpm": "^8.12.1",
    "tsup": "^8.0.1",
    "tsx": "^4.6.2",
    "vitest": "^1.0.4"
  }
}