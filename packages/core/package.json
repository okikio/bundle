{
  "name": "@bundle/core",
  "version": "0.0.0",
  "access": "public",
  "type": "module",
  "description": "An animation library for the modern web which utilizes the Web Animation API (WAAPI) to create butter smooth animation.",
  "typedocMain": "src/index.ts",
  "types": "@types/index.d.ts",
  "exports": {
    ".": {
      "require": "./lib/index.cjs",
      "import": "./lib/index.mjs",
      "default": "./lib/index.js"
    },
    "./lib/*": "./lib/*",
    "./types/*": "./@types/*",
    "./@types/*": "./@types/*",
    "./src/*": "./src/*",
    "./deno/*": "./src/deno/*",
    "./plugins/*": "./src/plugins/*",
    "./util": "./src/util.ts",
    "./utils/*": "./src/utils/*",
    "./configs/*": "./src/configs/*",
    "./package.json": "./package.json"
  },
  "files": [
    "lib",
    "src",
    "@types"
  ],
  "scripts": {
    "build:wasm": "tsx ./scripts/build-wasm.ts",
    "build:all": "pnpm build:wasm; pnpm build",
    "build": "vite build",
    "dev": "vite",
    "test:run": "vitest run && pnpm repl; pnpm deno",
    "test": "vitest",
    "repl": "tsx repl.ts",
    "deno": "deno run --allow-net --allow-env --allow-read --allow-write --allow-run ./repl.ts",
    "dts": "rm -r @types/ && tsc --project dts.tsconfig.json",
    "verify": "pnpm dts; pnpm test:run",
    "pre-release": "pnpm build:all; ultra verify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/okikio/bundlejs.git",
    "directory": "packages/core"
  },
  "keywords": [
    "modern",
    "bundlejs",
    "bundle size checker",
    "esbuild-wasm",
    "gzip",
    "brotli",
    "deno",
    "bundler",
    "treeshake",
    "bundlephobia",
    "cdn",
    "github",
    "skypack",
    "unpkg",
    "compressed",
    "jsx",
    "minify",
    "typescript"
  ],
  "author": {
    "name": "Okiki Ojo",
    "email": "hey@okikio.dev",
    "url": "https://okikio.dev"
  },
  "bugs": {
    "url": "https://github.com/okikio/bundlejs/issues"
  },
  "homepage": "https://bundlejs.com",
  "dependencies": {
    "@std/path": "npm:@jsr/std__path@^1.0.7",
    "@std/tar": "npm:@jsr/std__tar@^0.1.3",
    "esbuild": "^0.24.0",
    "esbuild-wasm": "^0.24.0",
    "resolve.exports": "^2.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.8.1",
    "tsx": "^4.19.1",
    "typescript": "5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-cp": "^4.0.8",
    "vitest": "^2.1.3"
  }
}